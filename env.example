# 應用配置
APP_NAME="Python教學多人協作平台"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# 資料庫配置
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=python_teaching_platform
DB_USERNAME=root
DB_PASSWORD=

# WebSocket配置
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=8080

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# 日誌配置
LOG_LEVEL=INFO
LOG_FILE=app.log

# 調試配置
DEBUG_MODE=true
PROFILE_ENABLED=false
QUERY_DEBUG=false
WEBSOCKET_DEBUG=false
AI_DEBUG=false

# 安全配置
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=*


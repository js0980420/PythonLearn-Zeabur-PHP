{
    "name": "pythonlearn/collaboration-platform",
    "description": "Python 教學多人協作平台",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ratchet/pawl": "^0.4",
        "ratchet/rfc6455": "^1.4",
        "react/socket": "^1.12",
        "ext-sockets": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/classes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false,
        "allow-plugins": true
    },
    "scripts": {
        "post-install-cmd": [
            "echo '✅ 依賴安裝完成'"
        ]
    }
}

{
    "name": "pythonlearn/collaboration-platform",
    "description": "Python 教學多人協作平台 - 純 PHP + Ratchet WebSocket",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "PythonLearn Team",
            "email": "team@pythonlearn.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "cboden/ratchet": "^0.4.4",
        "guzzlehttp/guzzle": "^7.5",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/classes/",
            "WebSocket\\": "websocket/"
        }
    },
    "scripts": {
        "websocket:start": "php websocket/server.php",
        "websocket:stop": "pkill -f 'php websocket/server.php'",
        "test": "phpunit tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

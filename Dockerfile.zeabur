stdout_logfile=/var/log/supervisor/websocket-server.out.log
environment=PATH="/usr/local/bin:/usr/bin:/bin",WEBSOCKET_HOST="0.0.0.0",WEBSOCKET_PORT="8081"

[unix_http_server]

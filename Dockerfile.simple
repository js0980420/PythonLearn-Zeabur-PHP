# Zeabur 部署專用 Dockerfile - 單服務整合架構
FROM php:8.2-cli

# 安裝系統依賴
RUN apt-get update && apt-get install -y \
    curl \
    zip \
    unzip \
    libzip-dev \
    && docker-php-ext-install \
    zip \
    sockets \
    pdo \
    pdo_mysql \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# 設定工作目錄
WORKDIR /app

# 複製應用檔案
COPY . .

# 創建必要目錄
RUN mkdir -p /app/logs \
    && mkdir -p /app/data/rooms \
    && chmod -R 755 /app/logs \
    && chmod -R 755 /app/data

# 創建健康檢查端點
RUN echo '<?php' > /app/public/health.php && \
    echo 'header("Content-Type: application/json");' >> /app/public/health.php && \
    echo 'echo json_encode([' >> /app/public/health.php && \
    echo '    "status" => "healthy",' >> /app/public/health.php && \
    echo '    "timestamp" => date("c"),' >> /app/public/health.php && \
    echo '    "services" => [' >> /app/public/health.php && \
    echo '        "integrated" => "running"' >> /app/public/health.php && \
    echo '    ]' >> /app/public/health.php && \
    echo ']);' >> /app/public/health.php

# 創建啟動腳本
RUN echo '#!/bin/bash' > /app/start-integrated.sh && \
    echo 'echo "🚀 啟動 Python 協作學習平台 - 整合服務器"' >> /app/start-integrated.sh && \
    echo 'echo "📡 監聽端口: 8080"' >> /app/start-integrated.sh && \
    echo 'echo "🔌 WebSocket 端點: /ws"' >> /app/start-integrated.sh && \
    echo 'echo "🌐 HTTP 服務: /"' >> /app/start-integrated.sh && \
    echo 'echo "========================================"' >> /app/start-integrated.sh && \
    echo 'cd /app' >> /app/start-integrated.sh && \
    echo 'php test-servers/integrated-server.php' >> /app/start-integrated.sh && \
    chmod +x /app/start-integrated.sh

# 暴露端口
EXPOSE 8080

# 健康檢查
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8080/ || exit 1

# 啟動整合服務器
CMD ["/app/start-integrated.sh"] 
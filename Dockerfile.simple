# 簡化的 Zeabur 部署 Dockerfile
FROM php:8.2-cli

# 安裝基本系統依賴
RUN apt-get update && apt-get install -y \
    curl \
    zip \
    unzip \
    && docker-php-ext-install \
    sockets \
    pdo \
    pdo_mysql \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# 設定工作目錄
WORKDIR /app

# 複製應用檔案
COPY . .

# 創建必要目錄
RUN mkdir -p /app/logs \
    && mkdir -p /app/data/rooms \
    && chmod -R 755 /app/logs \
    && chmod -R 755 /app/data

# 創建健康檢查端點
RUN echo '<?php' > /app/public/health.php && \
    echo 'header("Content-Type: application/json");' >> /app/public/health.php && \
    echo 'echo json_encode([' >> /app/public/health.php && \
    echo '    "status" => "healthy",' >> /app/public/health.php && \
    echo '    "timestamp" => date("c"),' >> /app/public/health.php && \
    echo '    "services" => [' >> /app/public/health.php && \
    echo '        "integrated" => "running"' >> /app/public/health.php && \
    echo '    ]' >> /app/public/health.php && \
    echo ']);' >> /app/public/health.php

# 創建啟動腳本
RUN echo '#!/bin/bash' > /app/start.sh && \
    echo 'echo "🚀 啟動 Python 協作學習平台"' >> /app/start.sh && \
    echo 'echo "📡 整合服務器: 0.0.0.0:8080"' >> /app/start.sh && \
    echo 'echo "🔌 HTTP + WebSocket 同端口服務"' >> /app/start.sh && \
    echo 'echo "🚀 啟動整合服務器..."' >> /app/start.sh && \
    echo 'php test-servers/integrated-server.php &' >> /app/start.sh && \
    echo 'INTEGRATED_PID=$!' >> /app/start.sh && \
    echo 'echo "✅ 整合服務器已啟動 (PID: $INTEGRATED_PID)"' >> /app/start.sh && \
    echo 'echo "🎉 所有服務已啟動"' >> /app/start.sh && \
    echo 'wait' >> /app/start.sh && \
    chmod +x /app/start.sh

# 暴露端口
EXPOSE 8080

# 健康檢查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health.php || exit 1

# 啟動應用
CMD ["/app/start.sh"] 